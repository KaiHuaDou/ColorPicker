<Window x:Class="ColorPickerDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorPickerDemo"
        xmlns:colorpicker="clr-namespace:ColorPicker;assembly=ColorPicker"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1500">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/ColorPicker;component/Styles/DefaultColorPickerStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <colorpicker:PortableColorPicker Grid.Column="0" Style="{StaticResource DefaultColorPickerStyle}" SmallChange="5"
                                         ColorState="{Binding ElementName=maindisplay, Path=ColorState, Mode=TwoWay}"
                                         SecondColorState="{Binding ElementName=maindisplay, Path=SecondColorState, Mode=TwoWay}"/>

        <colorpicker:PortableColorPicker Grid.Row="1"
                                         ColorState="{Binding ElementName=maindisplay, Path=ColorState, Mode=TwoWay}"
                                         SecondColorState="{Binding ElementName=maindisplay, Path=SecondColorState, Mode=TwoWay}"/>


        <colorpicker:ColorDisplay Grid.Row="0" Grid.Column="1" x:Name="maindisplay"/>
        <colorpicker:HSVPicker Grid.Row="1" Grid.Column="1" ColorState="{Binding ElementName=maindisplay, Path=ColorState, Mode=TwoWay}" />
        <colorpicker:ColorSliders Grid.Row="2" Grid.Column="1" x:Name="second" ColorState="{Binding ElementName=maindisplay, Path=ColorState, Mode=TwoWay}"/>
        <colorpicker:HexColorTextBox Grid.Row="3" Grid.Column="1" ColorState="{Binding ElementName=maindisplay, Path=ColorState, Mode=TwoWay}" />

        <colorpicker:StandardColorPicker Grid.Column="2" Grid.RowSpan="4" Style="{StaticResource DefaultColorPickerStyle}"
                                         ColorState="{Binding ElementName=maindisplay, Path=ColorState, Mode=TwoWay}"
                                         SecondColorState="{Binding ElementName=maindisplay, Path=SecondColorState, Mode=TwoWay}"/>
        <colorpicker:StandardColorPicker Grid.Column="3" Grid.RowSpan="4" SmallChange="5" Width="200" Height="380"
                                         ColorState="{Binding ElementName=maindisplay, Path=ColorState, Mode=TwoWay}"
                                         SecondColorState="{Binding ElementName=maindisplay, Path=SecondColorState, Mode=TwoWay}"/>
    </Grid>
</Window>
