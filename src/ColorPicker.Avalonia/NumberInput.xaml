<UserControl x:Class="ColorPicker.Avalonia.NumberInput"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:behaviours="clr-namespace:ColorPicker.Behaviors"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:i="clr-namespace:Avalonia.Xaml.Interactivity;assembly=Avalonia.Xaml.Interactivity"
             xmlns:ia="clr-namespace:Avalonia.Xaml.Interactions.Core;assembly=Avalonia.Xaml.Interactions"
             mc:Ignorable="d"
             d:DesignHeight="20" d:DesignWidth="40" x:Name="numberInput">
    <Grid>

        <TextBox TextAlignment="Center" TextInput="NumberInput_TextInput" Style="{StaticResource DarkTextBoxStyle}" Text="{Binding ElementName=numberInput, Path=Value}">
            <i:Interaction.Behaviors>
                <behaviours:TextBoxFocusBehavior />
            </i:Interaction.Behaviors>
        </TextBox>
        <TextBox Width="0" Height="0" />
    </Grid>
</UserControl>