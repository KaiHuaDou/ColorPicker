<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="ColorPickerForegroundColor">White</Color>
    <Color x:Key="ColorPickerBackgroundColor">#202020</Color>
    <Color x:Key="ColorPickerBorderMidColor">#4F4F4F</Color>
    <Color x:Key="ColorPickerControlHighlightColor">#999</Color>
    <Color x:Key="ColorPickerTabSelectedColor">#2d2d2d</Color>

    <SolidColorBrush x:Key="ColorPickerForegroundBrush" Color="{DynamicResource ColorPickerForegroundColor}"/>
    <SolidColorBrush x:Key="ColorPickerBackgroundBrush" Color="{DynamicResource ColorPickerBackgroundColor}"/>
    <SolidColorBrush x:Key="ColorPickerBorderMidBrush" Color="{DynamicResource ColorPickerBorderMidColor}"/>
    <SolidColorBrush x:Key="ColorPickerControlHighlightBrush" Color="{DynamicResource ColorPickerControlHighlightColor}"/>
    <SolidColorBrush x:Key="ColorPickerTabSelectedBrush" Color="{DynamicResource ColorPickerTabSelectedColor}"/>

    <Thickness x:Key="ColorPickerBorderThickness">1</Thickness>
    <CornerRadius x:Key="ColorPickerControlRadius">5</CornerRadius>
</ResourceDictionary>
