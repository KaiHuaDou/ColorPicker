                    VerticalAlignment="Center"
                    Text="R" />
                <ui:RgbColorSlider
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="10,0,10,0"
                    VerticalAlignment="Center"
                    CurrentColorState="{Binding Path=ColorState, ElementName=uc}"
